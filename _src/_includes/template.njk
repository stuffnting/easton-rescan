<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="{{ '/css/lightbox.css' }}" />
    <link rel="stylesheet" href="{{ '/css/style.css' }}" />
  </head>
  <body>
    {% if page.url !== '/' %}
      <nav class="top-menu">
        <span class="top-menu__item"><a href="{{ '/' }}index.html" class="top-menu__link">Gallery Menu</a></span>
      </nav>
    {% endif %}
    <div class="page-content">
      <main class="main-content">{{content | safe}}</main>
      <footer class="footer">
        <div class="footer__copyright">Copyright &copy; R S Grove {{ thisYear }}</div>
        <div class="footer__spacer">|</div>
        <div class="footer__email">
          <script type="text/javascript">
            function mix(str) {
              return str.replace(/[a-zA-Z]/g, function (c) {
                return String.fromCharCode(
                  (c <= 'Z' ? 90 : 122) >= (c = c.charCodeAt(0) + 13) ? c : c - 26
                );
              });
            }
            let email = mix('evpuneq@fghssagvat.pbz');
            document.write('<a href="mailto:' + email + '">Contact me</a>');
          </script>
        </div>
      </footer>
    </div>
    <script src="../js/lightbox.js"></script>
  </body>
</html>
